@model CookingCurator.EntityModels.RecipeBaseViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this recipe?</h2>
<div>
    <h4>@Html.DisplayFor(model => model.title)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            User Rating
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rating)
        </dd>

        <dt>
            Instructions
        </dt>

        <dd>
            @Html.DisplayFor(model => model.instructions)
        </dd>

        <dt>
            Date Last Updated
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastUpdated)
        </dd>

        <dt>
            Author
        </dt>

        <dd>
            @Html.DisplayFor(model => model.author)
        </dd>

        <dt>
            Verified Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.verified)
        </dd>

        <dt>
            Source ID #
        </dt>

        <dd>
            @Html.DisplayFor(model => model.source_ID)
        </dd>

        <dt>
            Source Link
        </dt>

        <dd>
            @Html.DisplayFor(model => model.source_Link)
        </dd>

        <dt>
            Country of Origin
        </dt>

        <dd>
            @Html.DisplayFor(model => model.country)
        </dd>

        <dt>
            Meal Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.mealTimeType)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Recipe List", "Index")
        </div>
    }
</div>
