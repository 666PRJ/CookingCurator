@model IEnumerable<CookingCurator.EntityModels.UserBaseViewModel>

@{
    ViewBag.Title = "User Index";
}

<h2>User Index</h2>

<p>
    Register New User
    <!--@Html.ActionLink("Create New", "Create") -->
</p>
<table class="table">
    <tr>
        <th>
            User ID Numbers
        </th>
        <th>
            Usernames
        </th>
        <th>
            Email Addresses
        </th>
        <th>
            Ban Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
