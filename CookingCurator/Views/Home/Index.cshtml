@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h2>Cooking Curator</h2>
    <p class="lead">
        @if (User.Identity.IsAuthenticated)
        {
            <p>Welcome User @(User.Identity.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest")!! You are Logged In.</p>
        }

    </div>

<div class="row">
    <div class="col-md-6">
        <h2>Recipes</h2>
        <p>Getting started creating recipes using the links below: </p>
        <p>@Html.ActionLink("Add User Recipe", "Create", "Recipe", null, new { @class = "btn btn-default" })</p>
        <p>@Html.ActionLink("Add Verified Recipe", "CreateVerified", "Recipe", null, new { @class = "btn btn-default" })</p>
        <p>@Html.ActionLink("References", "Index", "References",null , new { @class = "btn btn-default" })</p>
        <p>@Html.ActionLink("Search for Recipe", "Search", "Search", null, new { @class = "btn btn-secondary" })</p>

    </div>
    <div class="col-md-6">
        <h2>Users</h2>
        <p>Search through the list of users in the application:</p>
        <p>@Html.ActionLink("Search for a user", "Search", "User", null, new { @class = "btn-default" })</p>
        <p>@Html.ActionLink("About this application", "About", "Home", null, new { @class = "btn-default" })</p>
    </div>
</div>