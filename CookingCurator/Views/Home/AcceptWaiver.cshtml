@model CookingCurator.EntityModels.UserAcceptWaiverViewModel

@{
    ViewBag.Title = "AcceptWaiver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AcceptWaiver</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>UserAcceptWaiverViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.user_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.acceptWaiver, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.acceptWaiver)
                    @Html.ValidationMessageFor(model => model.acceptWaiver, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
